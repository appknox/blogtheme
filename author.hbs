{{!< default}}
{{#author}}
<header class="page-header resume-header">
  <div class="background-image-holder parallax-background">
  {{#if cover}}
    <img class="background-image" alt="Background Image" src="{{cover}}">
  {{else}}
    <img class="background-image" alt="Background Image" src="{{asset 'img/blog.jpg'}}">
  {{/if}}
  </div>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="author-details">
          {{#if image}}
              <img alt="Author" class="author-img" src="{{image}}">
          {{/if}}
          <h1 class="text-white space-bottom-medium">{{name}}</h1>
          <span>{{bio}}</span>
        </div>
      </div>
    </div>
  </div>
</header>
{{/author}}
{{> "loop"}}