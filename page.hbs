{{!< default}}

{{! This is a page template. }}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}
        
        <header class="site-head post-header post-header-cover">

            <a id="open-menu-item"><i class="fa fa-bars"></i></a>
            
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="caption divider">
                            
                        <a class="blog-logo" href="{{@blog.url}}">
                            {{#if @blog.logo}}
                                <img src="{{@blog.logo}}" alt="Blog Logo" />
                            {{else}}
                                <span class="blog-title">{{@blog.title}}</span>
                            {{/if}}
                        </a>
                            
                        <h1 class="post-title">{{{title}}}</h1>
                            
                        </div>
                    </div>
                </div>
            </div>
            
        </header>
        
        <div class="container">
            <div class="row">
                <div class="col-md-12">
        
                <section class="post-content">
                    {{content}}
                </section>
                    
                </div>
            </div>
        </div>

        {{/post}}

    </article>

</main>