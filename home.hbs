{{!< default}}
<header class="fullscreen-element no-pad centered-text hidden-xs">
  <div class="background-image-holder parallax-background overlay">
  {{#if @blog.cover}}
    <img class="background-image" alt="Background Image" src="{{@blog.cover}}">
  {{else}}
    <img class="background-image" alt="Background Image" src="{{asset 'img/blog.jpg'}}">
  {{/if}}
  </div>

  {{#latestFeature posts}}
  <div class="container align-vertical">
    <div class="row">
      <div class="col-md-7 col-sm-8">
        <span class="text-white alt-font">{{date format="DD MMMM YYYY"}}</span>
        <h1 class="text-white">{{title}}</h1>
        <p class="lead text-white">{{excerpt words="35"}} ...</p>
        <a href="{{url}}" class="btn btn-primary btn-white">Read More</a>
      </div>
    </div>
  </div>
  {{/latestFeature}}

  
  <div class="bottom-band">
    <div class="container">
      <div class="row">
      {{#moreFeature posts}}
        {{#foreach this}}
        <div class="col-sm-4">
          <span class="sub alt-font text-white">{{date format="DD MMMM YYYY"}}</span>
          <h3 class="text-white">{{title}}</h3>
          <a href="{{url}}" class="link-text text-white">Read More</a>
        </div>
        {{/foreach}}
      {{/moreFeature}}
      </div>
    </div>
  </div>

</header>
{{> "loop"}}

{{#contentFor "meta"}}
  <!-- Classic Meta Tags -->
  <title>Appknox - Blog</title>
  <meta name="description" content="Add your description.">

  <!-- Open Graph Meta Tags -->
  <meta property="og:type" content="website"/>
  <meta property="og:title" content="Gentlenode Studio | Journal"/>
  <meta property="og:description" content="Add your description."/>
  <meta property="og:site_name" content="Gentlenode Studio | Journal"/>
  <meta property="og:url" content="https://gentlenode.com/"/>
  <meta property="og:image" content="https://gentlenode.com/images/og-image.png"/>
  <meta property="fb:admins" content="100006090000201"/>

  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary"/>
  <meta name="twitter:title" content="Gentlenode Studio | Journal"/>
  <meta name="twitter:description" content="Add your description."/>
  <meta name="twitter:image" content="https://gentlenode.com/images/og-image.png"/>
  <meta name="twitter:site" content="@appknox"/>
  <meta name="twitter:creator" content="@appknox"/>
{{/contentFor}}