{{!< default}}

<header class="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    
    <a id="open-menu-item" href="#main-menu"><i class="fa fa-bars"></i></a>
    
    <div class="caption divider">
        <div class="site-head-content inner">
            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>
        </div>
    </div>
</header>

<main class="content" role="main">
    
    <div class="container">
        <div class="row">
            
            <div class="col-md-8 col-md-offset-2">
        
            {{! Each post will be output using this markup }}
            {{#foreach posts}}
        
            <article id="post{{id}}"  class="{{post_class}} divider">
                <header class="post-header">
                    
                    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                    
                    <section class="post-time">
                    <time datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-clock-o"></i>{{date format="MMMM DD YYYY"}}</time>
                    </section>  
        
                </header>
                
                <section class="post-excerpt">
                    <p>{{excerpt}}&hellip;</p>
                </section>
                
                {{#if tags}}
                <section class="post-tags">
                <i class="fa fa-tags"></i>{{tags separator=", "}}
                </section>
                {{/if}}
                    
            </article>
        
            {{/foreach}}
        
            {{!! After all the posts, we have the previous/next pagination links }}
            {{pagination}}
                    
            </div>
            
            <div class="col-md-2">
                
                <ul id="navigation" class="menu navigation-menu">
                {{#foreach posts}}
                <li><a href="{{url}}">{{title}}</a><br/><time datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-clock-o"></i>{{date format="MMMM DD YYYY"}}</time></li>
                {{/foreach}}
                </ul>
                
                
            </div>
            
        </div>
    </div>

</main>