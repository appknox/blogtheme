{{!< default}}
<header class="page-header resume-header">
  <div class="background-image-holder parallax-background">
  {{#if @blog.cover}}
    <img class="background-image" alt="Background Image" src="{{@blog.cover}}">
  {{else}}
    <img class="background-image" alt="Background Image" src="{{asset 'img/blog.jpg'}}">
  {{/if}}
  </div>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="text-white space-bottom-medium">{{@blog.title}}</h1>
        <span>{{@blog.description}}</span>
      </div>
    </div>
  </div>
</header>
{{> "loop"}}

{{#contentFor "meta"}}

  <!-- Open Graph Meta Tags -->
  <meta property="og:type" content="website"/>
  <meta property="og:title" content="Appknox - Blog"/>
  <meta property="og:description" content="Mobile app vulnerability detection and remediation"/>
  <meta property="og:site_name" content="Appknox - Blog"/>
  <meta property="og:url" content="https://blog.appknox.com/"/>
  <meta property="og:image" content="https://blog.appknox.com/assets/img/appknox-fb.jpg"/>
  <meta property="fb:admins" content="813418430"/>

  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary"/>
  <meta name="twitter:title" content="Appknox - Blog"/>
  <meta name="twitter:description" content="Mobile app vulnerability detection and remediation"/>
  <meta name="twitter:image" content="https://blog.appknox.com/assets/img/appknox-fb.jpg"/>
  <meta name="twitter:site" content="@appknox"/>
  <meta name="twitter:creator" content="@appknox"/>
{{/contentFor}}