{{!< default}}
{{#post}}
<header class="page-header resume-header">
  <div class="background-image-holder parallax-background">
  {{#if image}}
    <img class="background-image" alt="Background Image" src="{{image}}">
  {{else}}
    <img class="background-image" alt="Background Image" src="{{asset 'img/blog.jpg'}}">
  {{/if}}
  </div>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="text-white space-bottom-medium">{{title}}</h1>
      </div>
    </div>
  </div>
</header>
<section class="article-single">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-sm-9">
        <div class="article-body">
          {{content}}
        </div>
        {{#author}}
        <div class="author-details">
          {{#if image}}
          <img alt="Author" class="author-img" src="{{image}}">
          {{/if}}
          <h5><a href="{{url}}">{{name}}</a></h5>
          {{#if bio}}
          <p>
            {{bio}}
          </p>
          {{/if}}
          {{#if website}}<p><i class="icon icon_link_alt"></i><a href="{{website}}">{{website}}</a></p>{{/if}}
        </div>
        {{/author}}
        {{> widgets/disqus }}
      </div>
      
      <div class="col-sm-3 col-md-offset-1">
        <div class="blog-sidebar">
          {{> sidebar/subscribe }}
          {{> sidebar/recent }}
          {{#if tags}}
            {{> sidebar/tags }}
          {{/if}}
          {{> sidebar/twitter }}
          {{> sidebar/facebook }}
        </div>
      </div>
      
    </div>
    
  </div>

</section>
{{/post}}