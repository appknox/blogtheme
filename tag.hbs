{{!< default}}
<header class="page-header resume-header">
  <div class="background-image-holder parallax-background">
  <img class="background-image" alt="Background Image" src="{{asset 'img/blog.jpg'}}">
  </div>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        
        <h1 class="text-white space-bottom-medium">{{tag.name}}</h1>
        <span>
        {{#if tag.description}}
          {{tag.description}}
        {{else}}
          {{pagination.total}}-post collection
        {{/if}}
        </span>
      </div>
    </div>
  </div>
</header>
{{> "loop"}}